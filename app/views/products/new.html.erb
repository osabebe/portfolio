<%= form_for(@product, :url => { controller:'products', action:'create'})do |f| %>
   <%= f.label :作品 %>
   <br>
   作品名
   <%= f.text_field :name,size: 140 %>
   <br>
   制作期間
   <%= f.text_field :production_period,size: 140 %>
   <br>
   この作品について
   <%= f.text_field :detail,size: 140 %>
   <br>
   <%= f.file_field :image %>
   <br>
   サイトURL
   <%= f.text_field :site_url,size: 140 %>
   <br>
   GitHubURL
   <%= f.text_field :github_url,size: 140 %>
   <br>
   <%= f.submit %>
   <br>
<% end %>