    <div class="my_link">
      <%= link_to "https://www.instagram.com/bebeko___/", target: :_blank do %>
        <%= image_tag 'instagram.png', class:"image" %>
      <% end %>
      <%= link_to "https://www.facebook.com/ami.osabe.9/", target: :_blank do %>
