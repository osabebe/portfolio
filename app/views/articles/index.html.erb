<div>
  <% if user_signed_in? %>
    <% if current_user == @user || current_user.admin? %>
      <%= link_to "新規投稿へ", new_article_path %>
    <% end %>
  <% end %>
  <div class="article_title">Articles</div>
  <div class="article">
    <% unless @articles.present? %>
      <div class="no_article">現在技術発信はしていません</div>
    <% end %>
    <% @articles.each do |t| %>
      <div class="article_content">
        <%= link_to t.site_url, target: :_blank do %>
          <%= image_tag t.image_url, class:"article_image" %>
        <% end %>
        <div><%= t.date %></div>
        <% if user_signed_in? %>
          <% if current_user == @user || current_user.admin? %>
          <div class="edit">
            <%= link_to "編集する", edit_article_path(t.id) %>
            <%= link_to "削除する", article_path(t.id), method: :delete %>
          </div>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
  <footer>
    <div class="my_link">
      <%= link_to "https://www.instagram.com/bebeko___/", target: :_blank do %>
        <%= image_tag 'instagram.png', class:"image" %>
      <% end %>
      <%= link_to "https://www.facebook.com/ami.osabe.9/", target: :_blank do %>
        <%= image_tag 'facebook.png', class:"image" %>
      <% end %>
      <%= link_to "https://github.com/osabebe", target: :_blank do %>
        <%= image_tag 'https://img.icons8.com/windows/32/000000/github.png' %>
      <% end %>
    </div>
    <div class="footer_name">©︎ 2020 AmiOsabe</div>
  </footer>
</div>
